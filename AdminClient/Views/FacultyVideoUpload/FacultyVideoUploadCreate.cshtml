@using Microsoft.Extensions.Configuration;
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration;

@{
    ViewBag.Title = "FacultyVideoUpload Create";
    string apiUrl = Configuration.GetValue<string>("WebAPIBaseUrl");
}
<style>
    #preloader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .spinner {
        border: 4px solid rgba(255, 255, 255, 0.3);
        border-top: 4px solid #fff;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

</style>
<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fe fe-pie-chart mr-1"></i> FacultyVideoUpload </a></li>
        <li class="breadcrumb-item active" aria-current="page">FacultyVideoUpload</li>
    </ol>
    <div class="ml-auto">
        <a href="~/FacultyVideoUpload/FacultyVideoUploadList" class="btn btn-primary btn-icon btn-sm text-white mr-2">
            <span>
                <i class="fe fe-plus"></i>
            </span> View
        </a>
    </div>
</div>
<div class="row">
    <div class="col-md">
        <div class="card overflow-hidden">
            <div class="card-header">
                <h3 class="card-title">Teacher Create</h3>
            </div>
            <div class="card-body">
                <form action="#" role="form" class="validate" id="formPost">
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Course Name <span style="color: red;"><b>*</b></span></label>
                                <select class="form-control" autocomplete="off" id="CourseId" required></select>
                            </div>
                        </div>

                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label">SubCourse Name <span style="color: red;"><b>*</b></span></label>
                                <select class="form-control" autocomplete="off" id="SubCourseId" required></select>
                            </div>
                        </div>

                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Subject Name <span style="color: red;"><b>*</b></span></label>
                                <select class="form-control" autocomplete="off" id="SubjectId" required></select>
                            </div>
                        </div>

                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Teacher Name <span style="color: red;"><b>*</b></span></label>
                                <select class="form-control" autocomplete="off" id="TeacherId" required></select>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label">FixVideo Name <span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" autocomplete="off" id="FixVideoName" name="FixVideoName" placeholder="FixVideo Name" required />
                            </div>
                        </div>

                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label">FixVideo Url <span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" autocomplete="off" id="FixVideoUrl" name="FixVideoUrl" placeholder="FixVideo Url" required />
                            </div>
                        </div>

                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label">DemoVideo Name <span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" autocomplete="off" id="DemoVideoName" name="DemoVideoName" placeholder="DemoVideo Name" required />
                            </div>
                        </div>

                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label">DemoVideo Url <span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" autocomplete="off" id="DemoVideoUrl" name="DemoVideoUrl" placeholder="DemoVideo Url" required />
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <button type="button" id="btnSave" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" />


@section scripts{

    <script>

        GetCourse()
        function GetCourse(Id) {
            var opt = '';
            $.ajax({
                type: "GET",
                url: "@apiUrl/api/Course/GetCourseList",
                contentType: "application/json; charset=utf-8",
                headers: {
                    "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                },
                dataType: "json",
                success: function (res) {
                    var options = [];
                    options.push('<option value="0">Select Course </option>');
                    for (var i = 0; i < res.data.length; i++) {
                        if (Id == res.data[i].courseId) {
                            opt = 'selected'
                        } else {
                            opt = '';
                        }
                        options.push('<option value="' + res.data[i].courseId + '" ' + opt + '>' + res.data[i].courseName + '</option>');
                    }
                    $("#CourseId").html(options.join(''));
                },
                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        }


        $("#CourseId").change(function () {
            var subcourseid = $("#CourseId").val()
            var opt = '';
            $.ajax({
                type: "GET",
                url: '@apiUrl/api/SubCourse/GetSubCourseListbyCourseId/' + subcourseid,
                dataType: "json",
                success: function (data) {
                    var options = [];
                    options.push('<option>Select SubCourse</option>');
                    for (var i = 0; i < data['data'].length; i++) {

                        options.push('<option value="' + data['data'][i].subCourseId + '" ' + opt + '>' + data['data'][i].subCourseName + '</option>');
                    }
                    $("#SubCourseId").html(options.join(''));

                },
                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        });


        $("#SubCourseId").change(function () {
            var subjectid = $("#SubCourseId").val()
            var opt = '';
            $.ajax({
                type: "GET",
                url: '@apiUrl/api/Subject/GetSubjectListbySubCourseId/' + subjectid,
                dataType: "json",
                success: function (data) {
                    var options = [];
                    options.push('<option>Select Subject</option>');
                    for (var i = 0; i < data['data'].length; i++) {

                        options.push('<option value="' + data['data'][i].subjectId + '" ' + opt + '>' + data['data'][i].subjectName + '</option>');
                    }
                    $("#SubjectId").html(options.join(''));

                },
                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        });


        $("#SubjectId").change(function () {
            var teacherId = $("#SubjectId").val()
            var opt = '';
            $.ajax({
                type: "GET",
                url: '@apiUrl/api/Teacher/GetTeacherListbySubjectId/' + teacherId,
                dataType: "json",
                success: function (data) {
                    var options = [];
                    options.push('<option>Select Teacher</option>');
                    for (var i = 0; i < data['data'].length; i++) {

                        options.push('<option value="' + data['data'][i].teacherId + '" ' + opt + '>' + data['data'][i].teacherName + '</option>');
                    }
                    $("#TeacherId").html(options.join(''));

                },
                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        });

        $(function () {
            $("#btnSave").click(function (e) {
                console.log("Button clicked");

                if (!document.getElementById("formPost").checkValidity()) {
                    e.preventDefault();
                    console.log("Form is invalid");
                } else {
                    var model = {
                        courseId: parseInt($("#CourseId").val()),
                        subCourseId: parseInt($("#SubCourseId").val()),
                        subjectId: parseInt($("#SubjectId").val()),
                        teacherId: parseInt($("#TeacherId").val()),
                        fixVideoDTOs: [
                            {
                                fixVideoName: $.trim($("#FixVideoName").val()),
                                fixVideoUrl: $.trim($("#FixVideoUrl").val()),
                                createdBy: @Context.Session.GetInt32("UserId")
                                }
                        ],
                        demoVideoDTOs: [
                            {
                                demoVideoName: $.trim($("#DemoVideoName").val()),
                                demoVideoUrl: $.trim($("#DemoVideoUrl").val()),
                                createdBy: @Context.Session.GetInt32("UserId")
                            }
                        ],
                        createdBy: @Context.Session.GetInt32("UserId")
                        };
                    console.log("Model: ", model);
                    $.ajax({
                        type: "POST",
                        url: "@apiUrl/api/FacultyVideoUpload/CreateFacultyVideoUpload",
                        data: JSON.stringify(model),
                        contentType: "application/json; charset=utf-8",
                        headers: {
                            "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                        },
                        dataType: "json",
                        success: function (data, statusText, xhr) {
                            console.log("Success: ", data, statusText, xhr);
                            if (xhr.status === 200) {
                                sweetAlert({
                                    html: true,
                                    icon: "success",
                                    title: "FacultyVideoUpload",
                                    text: "Successfully created!",
                                    type: "success"
                                });
                            } else if (data.status === "duplicate") {
                                sweetAlert("Validation Alert!", data.responseMsg, "warning");
                            } else if (data.status === "error") {
                                sweetAlert("Validation Alert!", data.responseMsg, "warning");
                            } else {
                                sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                            }
                        },
                        error: function (data) {
                            console.log("Error: ", data);
                            if (data.status == 401) {
                                window.location.replace('/Message/TokenExpire');
                            } else if (data.status == 403) {
                                window.location.replace('/Message/Unauthorize');
                            } else if (data.status == 400) {
                                sweetAlert("Validation Alert!", "Please check input data!", "warning");
                            }
                        }
                    });
                }
            });
        });

                      
    </script>

}
