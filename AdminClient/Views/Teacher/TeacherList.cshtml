@using Microsoft.Extensions.Configuration;
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration;

@{
    ViewBag.Title = "Teacher Create";
    string apiUrl = Configuration.GetValue<string>("WebAPIBaseUrl");
}

<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fe fe-pie-chart mr-1"></i> Admin Console</a></li>
        <li class="breadcrumb-item active" aria-current="page">Teacher</li>
    </ol>
    <div class="ml-auto">
        <a href="~/Teacher/TeacherCreate" class="btn btn-primary btn-icon btn-sm text-white mr-2">
            <span>
                <i class="fe fe-plus"></i>
            </span> Add New
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Teacher List</div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="Teacher_Tb" class="table table-striped table-bordered nowrap dataTable no-footer dtr-inline" style="width:100%">
                        <thead>
                            <tr>
                                <th>Course Name</th>
                                <th>SubCourse Name </th>
                                <th>Subject Name </th>
                                <th>Teacher Name</th>
                                <th>Teacher Image</th>
                                <th>Action </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" />



@section scripts{
    <script>
        // List
        Subject()
        async function Subject() {
            var table = $('#Teacher_Tb').DataTable();
            table.destroy();
            table = $('#Teacher_Tb').dataTable({
                "paginationType": "full_numbers",
                "dom": 'Bfrtip',
                "buttons": ['excel', 'print'],
                "searching": true,
                "paging": true,
                "sort": true,
                "info": true,
                "ajax": {
                    "url": '@apiUrl/api/Teacher/GetTeacherList',
                    "type": "GET",
                    "dataType": "json",
                    "headers": {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },
                    "error": function (data) {
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        }
                    }
                },
                "order": [],
                "columns": [
                    { "data": "courseName", "orderable": true, "visible": true },
                    { "data": "subCourseName", "orderable": true, "visible": true },
                    { "data": "subjectName", "orderable": true, "visible": true },
                    { "data": "teacherName", "orderable": true, "visible": true },
                    {
                        "render": function (data, type, row) {
                            if (row.teacherImage === '')
                                return '';
                            else
                                return '<a href="#" data-toggle="modal" data-target="#photoModal" data-photo="' + row.teacherImage + '"><img style="margin-left: 28px;" class="avatar avatar-md rounded-circle" src="' + row.teacherImage + '"/></a>'
                        }
                    },
                    {
                        "render": function (data, type, row) {
                            return '<a class="btn btn-sm btn-primary" href="../Teacher/TeacherEdit?teacherId=' + row.teacherId + '"><i class="fa fa-edit"></i></a>' + '&nbsp&nbsp<button class="btn btn-sm btn-danger" data-target="#delete" data-id=' + row.teacherId + ' data-title="Delete"><i class="fa fa-trash"></i></button>';
                        }
                    }
                ]
            });
        }

        // Delete
        $('#Teacher_Tb tbody').on('click', 'button[data-target="#delete"]', function () {
            var id = $(this).data('id');
            var row = $(this).closest('tr');
            swal({
                html: true,
                title: "Are you sure?",
                text: "You will not be able to recover this data!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, confirm it!",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "GET",
                    url: "@apiUrl/api/Teacher/DeleteTeacher/" + id + "/" + @Context.Session.GetInt32("UserId"),
                    contentType: "application/json; charset=utf-8",
                    headers: {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },
                    dataType: "json",
                    success: function (data, statusText, xhr) {
                        if (xhr.status == 200) {
                            var table = $('#Teacher_Tb').DataTable();
                            table.row(row).remove().draw(false);
                            sweetAlert({
                                html: true,
                                title: "Subject",
                                text: "Successfully deleted!",
                                type: "success"
                            });
                        } else if (xhr.status == 202) {
                            sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        } else {
                            sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                        }
                    },
                    error: function (data) {
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        }
                    }
                });
            });
        });

        // JavaScript function for opening profile photo in a modal
        $(document).on('click', 'a[data-toggle="modal"]', function () {
            var photoUrl = $(this).data('photo');
            $('#profilePhotoModal').attr('src', photoUrl);
        });
    </script>
}

<!-- Modal for displaying profile photo -->
<div id="photoModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Teacher Image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <!-- Center the content -->
                <img id="profilePhotoModal" class="img-fluid mx-auto" src="" alt="Profile Photo">
            </div>
        </div>
    </div>
</div>



