                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        });

        $(function () {
            $("#btnSave").click(function (e) {
                console.log("Button clicked");

                if (!document.getElementById("formPost").checkValidity()) {
                    e.preventDefault();
                    console.log("Form is invalid");
                } else {
                    console.log("Form is valid, proceeding with submission");
                    imgPath = '';
                    var totalFiles = document.getElementById('TeacherImage').files.length;
                    if (totalFiles > 0) {
                        uploadFile();
                    }
                    var model = {
                        courseId: parseInt($("#CourseId").val()),
                        subCourseId: parseInt($("#SubCourseId").val()),
                        subjectId: parseInt($("#SubjectId").val()),
                        teacherName: $.trim($("#TeacherName").val()),
                        teacherImage: imgPath,
                        createdBy: @Context.Session.GetInt32("UserId"),
                    }
                    console.log("Model: ", model);
                    $.ajax({
                        type: "POST",
                        url: "@apiUrl/api/Teacher/CreateTeacher",
                        data: JSON.stringify(model),
                        contentType: "application/json; charset=utf-8",
                        headers: {
                            "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                        },
                        dataType: "json",
                        success: function (data, statusText, xhr) {
                            console.log("Success: ", data, statusText, xhr);
                            if (xhr.status === 200) {
                                sweetAlert({
                                    html: true,
                                    icon: "success",
                                    title: "Teacher",
                                    text: "Successfully created!",
                                    type: "success"
                                });
                            } else if (data.status === "duplicate") {
                                sweetAlert("Validation Alert!", data.responseMsg, "warning");
                            } else if (data.status === "error") {
                                sweetAlert("Validation Alert!", data.responseMsg, "warning");
                            } else {
                                sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                            }
                        },
                        error: function (data) {
                            console.log("Error: ", data);
                            if (data.status == 401) {
                                window.location.replace('/Message/TokenExpire');
                            } else if (data.status == 403) {
                                window.location.replace('/Message/Unauthorize');
                            } else if (data.status == 400) {
                                sweetAlert("Validation Alert!", "Please check input data!", "warning");
                            }
                        }
                    });
                }
            });

            function uploadFile() {
                var totalFiles = document.getElementById('TeacherImage').files.length;
                if (totalFiles > 0) {
                    var formData = new FormData();
                    var files = document.getElementById('TeacherImage').files;
                    formData.append("file", files[0]);
                    $.ajax({
                        url: "/Upload/ImgUpload",
                        data: formData,
                        processData: false,
                        contentType: false,
                        async: false,
                        type: "POST",
                        success: function (data) {
                            console.log("File uploaded: ", data);
                            imgPath = data;
                        },
                        error: function (data) {
                            console.log("File upload error: ", data);
                            window.location.replace('/Message/SessionExpire');
                        }
                    });
                }
            }
        });

