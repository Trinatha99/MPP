                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Student Assignment <span style="color: red;"><b>*</b></span></label>
                                <input type="file" class="form-control" id="studentsimage" placeholder="Student Image" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <button type="button" id="btnSave" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


