@section scripts {
    <script>
        //Create
        $(function () {

            $("#btnSave").click(function (e) {
                //alert("Are u sure to Save the Data??")
                if (!document.getElementById("formPost").checkValidity()) {
                    e.preventDefault();
                }
                else {
                    imgPath = '';
                    var totalFiles = document.getElementById('studentsimage').files.length;
                    if (totalFiles > 0) {
                        uploadFile();
                    }
                    // Show preloader
                    var preloader = $("#preloader");
                    preloader.removeClass("d-none");
                    var model = {
                        //notificationCategoryId: parseInt($("#notificationcategoryid").val()),
                        studentsName: $.trim($("#notificationcategoryid").val()),
                        // description: $.trim($("#notificationdescription").val()),
                        studentsAssignment: imgPath,

                        createdBy: @Context.Session.GetInt32("UserId"),
                    }
                    $.ajax({
                        type: "POST",
                        url: "@apiUrl/api/Students/CreateStudent",
                        data: JSON.stringify(model),
                        contentType: "application/json; charset=utf-8",
                        headers: {
                            "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                        },
                        dataType: "json",
                        success: function (data, statusText, xhr) {
                            console.log(data)
                            if (xhr.status === 200) {

                                Swal.fire({
                                    icon: "success",
                                    title: "Student",
                                    text: "Successfully created!",
                                }).then(function () {
                                    location.reload(); // Refresh the page
                                });
                                // preloader.addClass("d-none");
                            } else if (data.status === "Duplicate") {
                                Swal.fire({
                                    icon: "warning",
                                    title: "Validation Alert!",
                                    text: data.responseMsg,
                                }).then(function () {
                                    location.reload(); // Refresh the page
                                });
                            } else if (data.status === "error") {
                                Swal.fire({
                                    icon: "warning",
                                    title: "Validation Alert!",
                                    text: data.responseMsg,
                                }).then(function () {
                                    location.reload(); // Refresh the page
                                });
                            } else {
                                Swal.fire({
                                    icon: "warning",
                                    title: "Validation Alert!",
                                    text: "Something unexpected!",
                                }).then(function () {
                                    location.reload(); // Refresh the page
                                });
                            }
                            preloader.addClass("d-none");
                        },
                        error: function (data) {
                            if (data.status == 401) {
                                window.location.replace('/Message/TokenExpire');
                            } else if (data.status == 403) {
                                window.location.replace('/Message/Unauthorize');
                            } else if (data.status == 400) {
                                sweetAlert("Validation Alert!", "Please check input data!", "warning");
                            }
                            preloader.addClass("d-none");
                        }
                    });
                }
            });

            function uploadFile() {
                var totalFiles = document.getElementById('studentsimage').files.length;
                if (totalFiles > 0) {
                    var formData = new FormData();
                    var files = document.getElementById('studentsimage').files;
                    formData.append("file", files[0]);
                    $.ajax(
                        {
                            url: "/Upload/ImgUpload",
                            data: formData,
                            processData: false,
                            contentType: false,
                            async: false,
                            type: "POST",
                            success: function (data) {
                                imgPath = data;
                            },
                            error: function (data) {
                                window.location.replace('/Message/SessionExpire');
                            }
                        }
                    );
                }
            }
        });

