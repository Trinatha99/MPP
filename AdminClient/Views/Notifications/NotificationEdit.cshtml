@using Microsoft.Extensions.Configuration;
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration;

@{
    ViewBag.Title = "NotificationEdit";
    string apiUrl = Configuration.GetValue<string>("WebAPIBaseUrl");
}

<!-- PAGE-HEADER -->
<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fe fe-file-text mr-1"></i>User Console</a></li>
        <li class="breadcrumb-item active" aria-current="page">Notification Edit</li>
    </ol>
    <div class="ml-auto">
        <a href="~/Notifications/NotificationList" class="btn btn-primary btn-icon btn-sm text-white mr-2">
            <span>
                <i class="fe fe-plus"></i>
            </span> View
        </a>
    </div>
</div>
<!-- PAGE-HEADER END -->

<div class="row">
    <div class="col-md">
        <div class="card overflow-hidden">
            <div class="card-header">
                <h3 class="card-title">Notification Edit</h3>
            </div>
            <div class="card-body">
                <form action="#" role="form" class="validate" id="formPost">
                    <div class="row">


                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="form-label">Notification Name <span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" id="notificationcategoryid" required/>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Description  &nbsp;</label>
                                <textarea type="text" class="form-control" id="Description" placeholder="Description"></textarea>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="form-label">Notification Image  <span style="color: red;"><b>*</b></span></label>
                                <input type="file" class="form-control" id="notificationimg" required/>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <img id="productimgg" src="" width="100" class="rounded-circle">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <button type="button" id="Update" class="btn btn-primary">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
    
    <script>
       
        var NotificationId = @ViewBag.NotificationId
            loadSingleNotification()
        function loadSingleNotification() {

            $.ajax({
                type: "GET",
                url: "@apiUrl/api/Notification/GetSingleNotifications/" + NotificationId,
                contentType: "application/json; charset=utf-8",
                headers: {
                    "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                },
                dataType: "json",
                success: function (data) {
                    console.log(data);
                    if (data) {
                        $('#notificationcategoryid').val(data.notificationName);
                        $('#Description').val(data.description);
                        $('#productimgg').attr('src', data.image);

                    }
                    else {
                        sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                    }
                },
                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        }

        $("#Update").click(function (e) {
            if (!document.getElementById("formPost").checkValidity()) {
                e.preventDefault();
            } else {
                imgPath = '';
                var totalFiles = document.getElementById('notificationimg').files.length;
                if (totalFiles > 0) {
                    uploadFile();
                }
                var model = {
                    notificationsId: NotificationId,
                    notificationName: $.trim($("#notificationcategoryid").val()),
                    description: $.trim($("#Description").val()),
                    image: imgPath,
                    updatedBy: @Context.Session.GetInt32("UserId"),
                }
                console.log(model)
                $.ajax({
                    type: "POST",
                    url: "@apiUrl​/api/Notification/UpdateNotifications",
                    data: JSON.stringify(model),
                    contentType: "application/json; charset=utf-8",
                    headers: {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },

                    success: function (data, statusText, xhr) {
                        console.log(data)
                        if (xhr.status === 200) {
                            $('#Notification_Tb').DataTable().ajax.reload(null, false);
                            sweetAlert({
                                html: true,
                                icon: "success",
                                title: "Notification Update ",
                                text: "Successfully updated!",
                                type: "success"
                            });
                        } else if (data.status === "duplicate") {
                            sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        } else if (data.status === "error") {
                            sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        } else {
                            sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                        }
                    },
                    error: function (data) {
                        console.log(data);
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        } else if (data.status == 400) {
                            sweetAlert("Validation Alert!", "Please check input data!", "warning");
                        }
                    }
                });
            }
        });


        function uploadFile() {
            var totalFiles = document.getElementById('notificationimg').files.length;
            if (totalFiles > 0) {
                var formData = new FormData();
                var files = document.getElementById('notificationimg').files;
                formData.append("file", files[0]);
                $.ajax(
                    {
                        url: "/Upload/ImgUpload",
                        data: formData,
                        processData: false,
                        contentType: false,
                        async: false,
                        type: "POST",
                        success: function (data) {
                            imgPath = data;

                        },
                        error: function (data) {
                            window.location.replace('/Message/SessionExpire');
                        }
                    }
                );
            }
        }

    </script>
}