@using Microsoft.Extensions.Configuration;
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration;

@{
    ViewBag.Title = "Facilities Edit";
    string apiUrl = Configuration.GetValue<string>("WebAPIBaseUrl");
}

<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fe fe-pie-chart mr-1"></i> Admin Console</a></li>
        <li class="breadcrumb-item active" aria-current="page">Facilities</li>
    </ol>
    <div class="ml-auto">
        <a href="~/Facilities/FacilitiesList" class="btn btn-primary btn-icon btn-sm text-white mr-2">
            <span>
                <i class="fe fe-plus"></i>
            </span> View
        </a>
    </div>
</div>

<div class="col-md-12 col-lg-12">
    <div class="card">
        <div class="card-header">
            <div class="col-md-11">
                <div class="card-title">Facilities Create</div>
            </div>
        </div>
        <div class="card-body">
            <div>
                <form action="#" role="form" class="validate" id="formPost">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row">
                                <div id="treeview">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="form-label">Facilities Name <span style="color: red;"><b>*</b></span></label>
                                        <input type="text" class="form-control" autocomplete="off" id="facilitiesname" name="facilitiesname" placeholder="Facilities Name" required />
                                    </div>
                                </div> 

                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label class="form-label">Facilities Details <span style="color: red;"><b>*</b></span></label>
                                        <textarea type="text" class="form-control" autocomplete="off" id="facilitiesdetails" name="facilitiesdetails" placeholder="Facilities Details" required></textarea>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="form-label">Facilities Image <span style="color: red;"><b>*</b></span></label>
                                        <input type="file" class="form-control" id="productimg" required>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <img id="productimgg" src="" width="100" class="rounded-circle">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <button type="button" id="Update" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                            <br />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" />


@section scripts{
    <script>

        var facilitiesId = @ViewBag.FacilitiesId
            loadSinglefacilities()
        function loadSinglefacilities() {
            $.ajax({
                type: "GET",
                url: "@apiUrl/api/Facilities/GetSingleFacilities/" + facilitiesId,
                contentType: "application/json; charset=utf-8",
                headers: {
                    "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                },
                dataType: "json",
                success: function (data) {
                    console.log(data);
                    if (data) {
                        $('#facilitiesname').val(data.facilitiesName);
                        $('#facilitiesdetails').val(data.facilitiesDetails);
                        $('#productimgg').attr('src', data.facilitiesImage);
                    }
                    else {
                        sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                    }
                },
                error: function (data) {
                    if (data.status == 401) {
                        window.location.replace('/Message/TokenExpire');
                    } else if (data.status == 403) {
                        window.location.replace('/Message/Unauthorize');
                    }
                }
            });
        }

        

        $("#Update").click(function (e) {
            if (!document.getElementById("formPost").checkValidity()) {
                e.preventDefault();
            } else {

                imgPath = '';
                var currentImageSrc = '';
                currentImageSrc = $('#productimgg').attr('src'); //eithi rahiba circle ra id

                if ($('#productimg').val() != '' && $('#productimg').val() != 'Choose file') { //eithi rahiba circle ra upare thiba jou id
                    uploadFile();
                } else if (currentImageSrc != '') {
                    imgPath = currentImageSrc;
                }

                var model = {
                    facilitiesId: facilitiesId,
                    facilitiesName: $.trim($("#facilitiesname").val()),
                    facilitiesDetails: $.trim($("#facilitiesdetails").val()),
                    facilitiesImage: imgPath,

                    updatedBy: @Context.Session.GetInt32("UserId"),
                }
                console.log(model)
                $.ajax({
                    type: "POST",
                    url: "@apiUrl/api/Facilities/UpdateFacilities",
                    data: JSON.stringify(model),
                    contentType: "application/json; charset=utf-8",
                    headers: {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },

                    success: function (data, statusText, xhr) {
                        console.log(data)
                        if (xhr.status === 200) {
                            $('#Facilities_Tb').DataTable().ajax.reload(null, false);
                            sweetAlert({
                                html: true,
                                icon: "success",
                                title: "Facilities",
                                text: "Successfully updated!",
                                type: "success"
                            });
                        } else if (data.status === "duplicate") {
                            sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        } else if (data.status === "error") {
                            sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        } else {
                            sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                        }
                    },
                    error: function (data) {
                        console.log(data);
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        } else if (data.status == 400) {
                            sweetAlert("Validation Alert!", "Please check input data!", "warning");
                        }
                    }
                });
            }
        });

        function uploadFile() {
            var totalFiles = document.getElementById('productimg').files.length;
            if (totalFiles > 0) {
                var formData = new FormData();
                var files = document.getElementById('productimg').files;
                formData.append("file", files[0]);
                $.ajax(
                    {
                        url: "/Upload/ImgUpload",
                        data: formData,
                        processData: false,
                        contentType: false,
                        async: false,
                        type: "POST",
                        success: function (data) {
                            imgPath = data;
                        },
                        error: function (data) {
                            window.location.replace('/Message/SessionExpire');
                        }
                    }
                );
            }
        }
    </script>
}