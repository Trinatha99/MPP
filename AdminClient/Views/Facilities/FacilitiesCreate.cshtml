@using Microsoft.Extensions.Configuration;
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration;

@{
    ViewBag.Title = "Facilities Create";
    string apiUrl = Configuration.GetValue<string>("WebAPIBaseUrl");
}
<style>
    #preloader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
    }

    .spinner {
        border: 4px solid rgba(255, 255, 255, 0.3);
        border-top: 4px solid #fff;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }

</style>
<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fe fe-pie-chart mr-1"></i> Facilities Master</a></li>
        <li class="breadcrumb-item active" aria-current="page">Facilities</li>
    </ol>
    <div class="ml-auto">
        <a href="~/Facilities/FacilitiesList" class="btn btn-primary btn-icon btn-sm text-white mr-2">
            <span>
                <i class="fe fe-plus"></i>
            </span> View
        </a>

    </div>
</div>


<div class="row">
    <div class="col-md">
        <div class="card overflow-hidden">
            <div class="card-header">
                <h3 class="card-title">Facilities  Create</h3>
            </div>
            <div class="card-body">
                <form action="#" role="form" class="validate" id="formPost">
                    <div class="row">


                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Facilities Name <span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" autocomplete="off" id="facilitiesname" name="facilitiesname" placeholder="Facilities Name" required />
                            </div>
                        </div>

                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Facilities Details  <span style="color: red;"><b>*</b></span></label>
                                <textarea type="text" class="form-control" autocomplete="off" id="facilitiesdetails" name="facilitiesdetails" placeholder="Facilities Details" required></textarea>
                            </div>
                        </div>

                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Facilities Image <span style="color: red;"><b>*</b></span></label>
                                <input type="file" class="form-control" id="facilitiesimage" placeholder="Facilities Image" required />
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label class="control-label">Facilities Video <span style="color: red;"><b>*</b></span></label>
                                <input type="text" class="form-control" id="facilitiesvideo" placeholder="Facilities Link" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <button type="button" id="btnSave" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" />

@section scripts{
    <script>
        //Create
        $(function () {

            $("#btnSave").click(function (e) {
                //alert("Are u sure to Save the Data??")
                if (!document.getElementById("formPost").checkValidity()) {
                    e.preventDefault();
                }
                else {
                    imgPath = '';
                    var totalFiles = document.getElementById('facilitiesimage').files.length;
                    if (totalFiles > 0) {
                        uploadFile();
                    }
                    // // Handle video upload
                    // var totalFiles = document.getElementById('facilitiesvideo').files.length;
                    // if (totalFiles > 0) {
                    //     uploadFile1();
                    // }
                    // Show preloader
                    var preloader = $("#preloader");
                    preloader.removeClass("d-none");
                    var model = {
                        facilitiesName: $.trim($("#facilitiesname").val()),
                        facilitiesDetails: $.trim($("#facilitiesdetails").val()),
                        facilitiesImage: imgPath,
                        facilitiesVideo: $.trim($("#facilitiesvideo").val()),
                        createdBy: @Context.Session.GetInt32("UserId"),
                    }
                    $.ajax({
                        type: "POST",
                        url: "@apiUrl/api/Facilities/CreateFacilities",
                        data: JSON.stringify(model),
                        contentType: "application/json; charset=utf-8",
                        headers: {
                            "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                        },
                        dataType: "json",
                        success: function (data, statusText, xhr) {
                            if (xhr.status === 200) {

                                Swal.fire({
                                    icon: "success",
                                    title: "Facilities",
                                    text: "Successfully created!",
                                }).then(function () {
                                    location.reload(); 
                                });
                                // preloader.addClass("d-none");
                            } else if (data.status === "Duplicate") {
                                Swal.fire({
                                    icon: "warning",
                                    title: "Validation Alert!",
                                    text: data.responseMsg,
                                }).then(function () {
                                    location.reload(); 
                                });
                            } else if (data.status === "error") {
                                Swal.fire({
                                    icon: "warning",
                                    title: "Validation Alert!",
                                    text: data.responseMsg,
                                }).then(function () {
                                    location.reload(); // Refresh the page
                                });
                            } else {
                                Swal.fire({
                                    icon: "warning",
                                    title: "Validation Alert!",
                                    text: "Something unexpected!",
                                }).then(function () {
                                    location.reload(); // Refresh the page
                                });
                            }
                            preloader.addClass("d-none");
                        },
                        error: function (data) {
                            if (data.status == 401) {
                                window.location.replace('/Message/TokenExpire');
                            } else if (data.status == 403) {
                                window.location.replace('/Message/Unauthorize');
                            } else if (data.status == 400) {
                                sweetAlert("Validation Alert!", "Please check input data!", "warning");
                            }
                            preloader.addClass("d-none");
                        }
                    });
                }
            });

            function uploadFile() {
                var totalFiles = document.getElementById('facilitiesimage').files.length;
                if (totalFiles > 0) {
                    var formData = new FormData();
                    var files = document.getElementById('facilitiesimage').files;
                    formData.append("file", files[0]);
                    $.ajax(
                        {
                            url: "/Upload/ImgUpload",
                            data: formData,
                            processData: false,
                            contentType: false,
                            async: false,
                            type: "POST",
                            success: function (data) {
                                imgPath = data;

                            },
                            error: function (data) {
                                window.location.replace('/Message/SessionExpire');
                            }
                        }
                    );
                }

            }
        //     function uploadFile1() {
        //         var totalFiles = document.getElementById('facilitiesvideo').files.length;
        //         if (totalFiles > 0) {
