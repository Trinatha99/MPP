@using Microsoft.Extensions.Configuration;
@using Microsoft.AspNetCore.Http
@inject IConfiguration Configuration;

@{
    ViewBag.Title = "Facilities Create";
    string apiUrl = Configuration.GetValue<string>("WebAPIBaseUrl");
}

<div class="page-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#"><i class="fe fe-pie-chart mr-1"></i> Admin Console</a></li>
        <li class="breadcrumb-item active" aria-current="page">Facilities</li>
    </ol>
    <div class="ml-auto">
        <a href="~/Facilities/FacilitiesCreate" class="btn btn-primary btn-icon btn-sm text-white mr-2">
            <span>
                <i class="fe fe-plus"></i>
            </span> Add New
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Facilities List</div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="Facilities_Tb" class="table table-striped table-bordered nowrap dataTable no-footer dtr-inline" style="width:100%">
                        <thead>
                            <tr>
                                <th>Action </th>
                                <th>Facilities Name </th>
                                <th>Facilities Details </th>
                                <th>Facilities Image </th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jstree/3.2.1/themes/default/style.min.css" />




@section scripts{
    <script>

        //List
        loadSinglefacilitieslist()
        async function loadSinglefacilitieslist() {
            var table = $('#Facilities_Tb').DataTable();
            table.destroy();
            table = $('#Facilities_Tb').dataTable({
                "paginationType": "full_numbers",
                "dom": 'Bfrtip',
                "buttons": ['csv', 'excel'],
                "searching": true,
                "paging": true,
                "sort": true,
                "info": true,
                "ajax": {
                    "url": '@apiUrl/api/Facilities/GetFacilitiesList',
                    "type": "GET",
                    "dataType": "json",
                    "headers": {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },
                    "error": function (data) {
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        }
                    }
                },
                "order": [],
                "columns": [
                    {
                        "render": function (data, type, row) {
                            return '<a class="btn btn-sm btn-primary" href="../Facilities/FacilitiesEdit?facilitiesId=' + row.facilitiesId + '"><i class="fa fa-edit"></i></a>' + '&nbsp&nbsp<button class="btn btn-sm btn-danger" data-target="#delete" data-id=' + row.facilitiesId + ' data-title="Delete"><i class="fa fa-trash"></i></button>';
                        }
                    },
                    { "data": "facilitiesName", "orderable": true, "visible": true },
                    { "data": "facilitiesDetails", "orderable": true, "visible": true },
                    {
                        "render": function (data, type, row) {
                            if (row.facilitiesImage === '')
                                return '';
                            else
                                return '<img style="margin-left: 50px;" class="avatar avatar-md rounded-circle" src="' + row.facilitiesImage + '"/>'
                        }
                    },
                  
                ]
            });
        }

        // Delete
        $('#Facilities_Tb tbody').on('click', 'button[data-target="#delete"]', function () {
            var id = $(this).data('id');

            swal({
                html: true,
                title: "Are you sure?",
                text: "You will not be able to recover this data!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, confirm it!",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "GET",
                    url: "@apiUrl/api/Facilities/DeleteFacilities/" + id + "/" + @Context.Session.GetInt32("UserId"),

                    contentType: "application/json; charset=utf-8",
                    headers: {
                        "authorization": "Bearer @Context.Session.GetString("TokenTxt")"
                    },
                    dataType: "json",
                    success: function (data, statusText, xhr) {
                        if (xhr.status == 200) {
                            $('#Facilities_Tb').DataTable().ajax.reload(null, false);
                            sweetAlert({
                                html: true,
                                title: "Facilities",
                                text: "Successfully deleted!",
                                type: "success"
                            });
                        } else if (xhr.status == 202) {
                            sweetAlert("Validation Alert!", data.responseMsg, "warning");
                        } else {
                            sweetAlert("Validation Alert!", "Something unexpected!", "warning");
                        }
                    },
                    error: function (data) {
                        if (data.status == 401) {
                            window.location.replace('/Message/TokenExpire');
                        } else if (data.status == 403) {
                            window.location.replace('/Message/Unauthorize');
                        }
                    }
                });
            });
        });

        $('#Facilities_Tb tbody').on('click', 'button[data-target="#delete"]', function () {
            var id = $(this).data('id');
            var userId = @Html.Raw(Json.Serialize(Context.Session.GetInt32("UserId")));
            var apiUrl = '@Html.Raw(Json.Serialize(apiUrl))';
            var tokenTxt = @Html.Raw(Json.Serialize(Context.Session.GetString("TokenTxt")));

            Swal.fire({
                title: "Are you sure?",
                text: "You will not be able to recover this data!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, delete it!",
                cancelButtonText: "No, cancel!",
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "GET",
                        url: "@apiUrl/api/Facilities/DeleteFacilities/" + id + "/" + @Context.Session.GetInt32("UserId"),
                        contentType: "application/json; charset=utf-8",
                        headers: {
                            "Authorization": "Bearer " + tokenTxt
                        },
                        success: function (data, statusText, xhr) {
                            if (xhr.status == 200) {
                                $('#Facilities_Tb').DataTable().ajax.reload(null, false);
                                Swal.fire("Deleted!", "Your course has been deleted.", "success");
                            } else if (xhr.status == 202) {
                                Swal.fire("Validation Alert!", data.responseMsg, "warning");
                            } else {
                                Swal.fire("Error!", "Something unexpected occurred!", "error");
                            }
                        },
                        error: function (data) {
                            if (data.status == 401) {
                                window.location.replace('/Message/TokenExpire');
                            } else if (data.status == 403) {
                                window.location.replace('/Message/Unauthorize');
                            } else {
                                Swal.fire("Error!", "An error occurred!", "error");
                            }
                        }
                    });
                }
            });
        });

    </script>

}