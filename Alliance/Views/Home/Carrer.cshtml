
@{
    ViewData["Title"] = "Carrer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .page-container {
        padding: 30px;
        background-color: #e9ecef;
    }

    .job-card {
        background-color: #ffffff;
        margin-bottom: 20px;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .job-card h3 {
        color: #0056b3;
        margin-top: 0;
    }

    .apply-button {
        background-color: #28a745;
        color: #ffffff;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .application-form {
        background-color: #f8f9fa;
        padding: 20px;
        margin-top: 30px;
        border-radius: 8px;
    }

    .form-control {
        margin-bottom: 15px;
    }

    .submit-button {
        background-color: #198754;
        color: #ffffff;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
    }
</style>
<div class="inner-page-banner-area" style="background-image: url('../../Fronted/img/banner/5.jpg');">
    <div class="container">
        <div class="pagination-area">
            <h1>Carrer</h1>
            <ul>
                <li><a href="#">Home</a>-</li>
                <li>Carrer</li>
            </ul>
        </div>
    </div>
</div>

<div class="container page-container">
    <h1>Welcome to Our Career Page</h1>
    <p>Join our team at  Appman Institute  and contribute to world-class education and research.</p>

    @*<h2>Current Openings</h2>
    <div class="job-card">
    <h3>Assistant Professor in Computer Science</h3>
    <p>Location: [Location]</p>
    <p>Description: We are looking for a passionate Assistant Professor in Computer Science to join our faculty team. [Short Job Description]</p>
    <button onclick="location.href='\Home\Career'" class="apply-button">Apply Now</button>
    </div>*@

    <!-- Add more job listings here -->

    <div class="application-form">
        <h2>Submit Your Application</h2>
        <form action="~/Email/SendApplication" method="post">
            <input type="text" name="name" placeholder="Name" id="name" class="form-control" required>

            <input type="email" name="email" placeholder="Email" id="email" class="form-control" required>

            <input type="text" name="position" placeholder="Position Applied For" id="position" class="form-control" required>

            <textarea name="coverletter" placeholder="Cover Letter" id="coverletter" class="form-control" rows="5" required></textarea>

            <button id="submit" type="submit" name="submit" class="submit-button">Submit</button>
        </form>
    </div>
</div>
<div class="container-fluid" style="margin-top: 0px;">
    <div class="row">
        <div class="google-map-area">
            <!-- Google Map iframe Integration -->
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3743.2657242557466!2d85.83958047349712!3d20.247811514146075!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3a19a738c495c67b%3A0x2df9b3f81d9d8c2b!2sAppman%20Technologies!5e0!3m2!1sen!2sin!4v1718626674255!5m2!1sen!2sin" style="border:0; width:100%; height:395px;" allowfullscreen=""></iframe>
        </div>
    </div>
</div>
<div id="loader" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); color: white; text-align: center; padding-top: 50vh; z-index: 9999;">Loading...</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('form').on('submit', function (event) {
            event.preventDefault();
            $('#loader').show();
            $.ajax({
                type: 'POST',
                url: $(this).attr('action'),
                data: $(this).serialize(),
                success: function (response) {
                    $('#loader').hide();
                    alert("Submitted successfully.");
                    $('form').trigger("reset");
                },
                error: function (xhr, status, error) {
                    $('#loader').hide();
                    alert("An error occurred. Please try again later.");
                }
            });
        });
    });
</script>